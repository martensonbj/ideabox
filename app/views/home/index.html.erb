<div class="ui container">

  <h1 class = "blue center aligned">IdeaBox</h1>

  <div class="ui grid idea-container">

    <div class="ui two wide column"></div>

    <div class="ui inverted segment seven wide column" id="idea-form">
      <div class="ui inverted form">
        <div class="two fields">

          <div class="ui form">
            <div class="field">
              <label>Idea</label>
              <input placeholder="Idea" type="text" id="idea-title">
            </div>

            <div class="field">
              <label>Body</label>
              <textarea placeholder="Details go here!" rows="2" id="idea-body"></textarea>
            </div>
          </div><!--form-->

        </div>
        <div class="ui submit button" id="save-idea">Save Idea</div>
      </div>
    </div>

    <div class="ui relaxed 2 wide column"></div>

    <% if @ideas %>
    <div class="ui relaxed divided list seven wide column" id="ideas-list">
      <% @ideas.each do |idea| %>
      <div class="item">

        <div class="content" data-id = "<%= idea.id %>" >
          <h4 class="title idea-element"> <i class="large idea middle aligned icon"></i> <%= idea.title %> </h4>
          <div class="body idea-element"><%= idea.body %> </div>
          <div class="quality idea-element"><span class="quality-span"><%= idea.quality.capitalize %></span>
            <span class="thumbs">
            <i class="large thumbs down icon decrease-quality"></i>
            <i class="large thumbs up icon increase-quality"></i>
            </span>
          </div>
          <div name='button-delete' class='delete-idea ui button' tabindex="0">Delete</div>
        </div>
      </div>
      <% end %>
    </div>
    <% end %>

  </div><!--grid--->
</div> <!--container-->
<script>
$(document).ready(function(){
  $('select.dropdown')
  .dropdown();
});
</script>
